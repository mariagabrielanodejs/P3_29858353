                        <div class="item">
                            <div class="contenedor-foto">
                                <img src="<%= row_img.url %>" alt="" class="img_product">
                            </div>
                            <div class="position">
                                <p class="descripcion">
                                    <%= data_product.nombre %>
                                </p>
                                <section class="codigo">
                                    <%= data_product.codigo %>
                                </section>
                                <article class="description" style="display: block;">
