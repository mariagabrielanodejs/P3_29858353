                        </div>
                        -->
        </div>
        <div class="container">
            <form action="/submit_payment/<%= data_product.id%>" method="POST">
                
                <label for="ccnum"><b>Número de Tarjeta de Crédito</b></label>
                <input type="text" id="ccnum" maxlength="16" name="numerotarjeta" pattern="[0-9]{16}" placeholder="1111222233334444"
                    required>

                <label for="expmonth"><b>Mes de Expiración</b></label>
                <input type="text" id="expmonth" maxlength="2" name="mes" pattern="(0[1-9]|1[0-2])" placeholder="09" required>

                <div class="row">
                    <div class="col-50">
                        <label for="expyear"><b>Año de Expiración</b></label>
                        <input type="text" id="expyear" maxlength="4" name="año" pattern="[0-9]{4}" placeholder="2024" required>
                    </div>
                    <div class="col-50">
                        <label for="cvv"><b>CVV</b></label>
                        <input type="text" id="cvv" name="cvv" maxlength="3"  pattern="[0-9]{3}" placeholder="352" required>
                    </div>
                </div>
                <span class="cantidad">
                    <span>Precio: </span>
                    $<%= preci %>
                </span>

                <br>
                <p class="cantidad">
                    Cantidad: <%= cantida %> unidades
                </p>
                <span class="cantidad" style="font-weight: bold;">
                    Total a pagar: $<%= tota %>
                </span>
                <input type="hidden" name="cantidad" value="<%= cantida %>">
                <input type="hidden" name="precio" value="<%= preci %>">
                <input type="hidden" name="total" value="<%= tota %>">
                <button type="submit">Enviar Pago</button>

            </form>
        </div>
    </div>



    
</body>
<script src="/javascripts/button.js"></script>

</html>